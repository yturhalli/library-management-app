{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "strict": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
